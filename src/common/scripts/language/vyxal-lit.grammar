
@top Program {(Word) +}

structure<term> { @specialize[@name={term}]<WeirdKW, term> }
branch<term> { @specialize[@name={term}]<WeirdKW, term> }
lambda<term> { @specialize[@name={term}]<WeirdKW, term> }


{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "moduleResolution": "Bundler",
        "allowArbitraryExtensions": true,
        "allowJs": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "jsx": "react-jsx"
    },
    "exclude": [
        "node_modules"
    ]
}